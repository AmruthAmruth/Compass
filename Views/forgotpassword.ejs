<%- include('partials/header') %>

<style>
    :root {
        --primary-color: #4EA685;
        --secondary-color: #57B894;
        --black: #000000;
        --white: #ffffff;
        --gray: #efefef;
        --gray-2: #757575;
    }

    html, body {
    height: 100vh;
    overflow: hidden;
    position: relative;
}

.swal2-container {
    position: fixed !important;
}
    * {
    font-family: 'Poppins', sans-serif;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

    body {
        background-color: var(--gray);
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        position: relative;
        overflow: hidden;
    }

    .background-pattern {
        position: absolute;
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, var(--primary-color) 20%, var(--secondary-color) 80%);
        clip-path: circle(60% at right 80%);
        z-index: 1;
    }

    .forgot-password-card {
        background: var(--white);
        padding: 50px;
        border-radius: 20px;
        box-shadow: 0 15px 25px rgba(0, 0, 0, 0.3);
        text-align: center;
        animation: slideIn 0.5s ease-in-out;
        position: relative;
        z-index: 2;
        max-width: 600px;
        width: 100%;
        border: 3px solid var(--primary-color);
    }

    @keyframes slideIn {
        from {
            opacity: 0;
            transform: translateY(-30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .btn-primary {
        background-color: var(--primary-color);
        border: none;
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        padding: 12px;
        border-radius: 10px;
        font-weight: bold;
        letter-spacing: 1px;
    }

    .btn-primary:hover {
        background-color: var(--secondary-color);
        transform: scale(1.1);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    }

    .input-group {
        background: var(--gray);
        border-radius: 15px;
        padding: 5px;
        display: flex;
        align-items: center;
        transition: all 0.3s ease-in-out;
      
    }

    .input-group:hover {
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }

    .input-group input {
        border: none;
        outline: none;
        background: none;
        flex: 1;
        padding: 12px;
        border-radius: 15px;
        font-size: 16px;
        color: var(--black);
    }

    .input-group .input-group-text {
        background-color: var(--primary-color);
        color: var(--white);
        border-radius: 15px;
        padding: 12px;
        display: flex;
        align-items: center;
        font-size: 18px;
    }
   

    .forgot-password-card h3 {
        font-size: 1.8rem;
        font-weight: bold;
        margin-bottom: 15px;
    }
    .forgot-password-card button{
        margin-top: 20px;
        color: var(--white);
        cursor: pointer;
    }

    .forgot-password-card p {
        font-size: 1rem;
        color: var(--gray-2);
        margin-bottom: 20px;
    }

    html,
body {
    height: 100vh;
    overflow: hidden;
} 


</style>

</head>
<body>
    <div class="background-pattern"></div>
    <div class="container d-flex justify-content-center align-items-center" style="max-width: 700px;">
        <div class="forgot-password-card">
            <h3 class="mb-3" style="color: var(--primary-color);">Forgot Password?</h3>
            <p class="text-muted">Enter your email to reset your password.</p>
            <form id="forgotPasswordForm">
                <div class="mb-4">
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                        <input type="email" id="email" class="form-control" placeholder="Enter your email">
                    </div>
                </div>
                <button type="submit" class="btn btn-primary w-100">Reset Password</button>
            </form>
        </div>
    </div>

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        document.getElementById("forgotPasswordForm").addEventListener("submit", async function (event) {
            event.preventDefault(); // Prevent form from reloading the page
    
            const email = document.getElementById("email").value;
    
            // Show loading popup
            Swal.fire({
                title: "Processing...",
                text: "Please wait while we send your OTP.",
                allowOutsideClick: false,
                showConfirmButton: false,
                heightAuto: false, 
                didOpen: () => {
                    Swal.showLoading();
                }
            });
    
            try {
                const response = await fetch("/forgotpassword", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ email })
                });
    
                const result = await response.json();
    
                // Close the loading popup
                Swal.close();
    
                if (result.success) {
                    Swal.fire({
                        title: "OTP Sent!",
                        text: result.message,
                        icon: "success",
                        heightAuto: false, 
                        confirmButtonText: "OK"
                    }).then(() => {
                        window.location.href = "/otpverify"; // Redirect after success
                    });
                } else {
                    Swal.fire({
                        title: "Error",
                        text: result.message,
                        heightAuto: false, 
                        icon: "error",
                        confirmButtonText: "Try Again"
                    });
                }
            } catch (error) {
                Swal.close(); // Close the loading popup on error
                Swal.fire({
                    title: "Server Error",
                    text: "Something went wrong. Please try again.",
                    heightAuto: false, 
                    icon: "error",
                    confirmButtonText: "OK"
                });
            }
        });
    </script>
    
</body>


</html>
